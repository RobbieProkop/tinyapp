<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a href="/urls" class="navbar-brand">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a href="/urls" class="nav-item nav-link">My URLs</a>
        <a href="/urls/new" class="nav-item nav-link">Create New URL</a>
      </div>
    </div>
    <!-- these aligator syntax only accept key value pairs, not objects -->
    <div class="form-group m-auto">
      <% if (!username) {%>
      <form action="/login" method="post" class="form-inline">
        <input
          type="text"
          name="username"
          placeholder="Username"
          class="form-control"
        />
        <button class="btn btn-outline-dark ml-3">Login</button>
      </form>
      <%} else {%>
      <form action="/logout" method="post" class="form-inline">
        <label for="user">Logged In As: <%= username %> </label>
        <button class="btn btn-outline-dark ml-3">Logout</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>
